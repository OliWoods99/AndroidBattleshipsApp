<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <uk.ac.bournemouth.ap.battleships.PlaceShipView
            android:id="@+id/placeShipView"
            style="@style/Widget.Theme.Battleships.MyView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

            <Button
               android:id="@+id/buttonPlaceShip"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginBottom="96dp"
               android:onClick="confirmShip"
               android:text="Place"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/placeShipView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>